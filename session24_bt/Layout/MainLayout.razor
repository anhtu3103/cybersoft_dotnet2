@inherits LayoutComponentBase



<div class="container-fluid">
    @* sidebar *@
    <div class="row vh-100">
        @* flex-column: sắp xếp các item theo chiều dọc *@
        @* align-item-center: sắp xếp item ở giữa theo chiều dọc *@
        @* justify-content-center: sắp xếp item ở giữa theo chiều ngang *@
        @* h-100: setup cho div này full màn hình theo chiều dọc *@
        <div class="col-3 position-fixed h-100 d-flex flex-column align-item-center justify-content-center" style="background-color: #bd5d38">
            @* avatar *@
            <div class="d-flex align-item-center justify-content-center">
                <img class="rounded-circle" style="width: 160px; height: 160px"  src="profile.jpg" alt="">
            </div>
            <NavMenu />
        </div>
        @* main content *@
        @* ms-auto: đẩy nội dung trong body sang bên phải để dành chỗ cho sidebar *@
        <div class="col-9 ms-auto h-100">
            @Body
        </div>
    </div>

    
</div>













